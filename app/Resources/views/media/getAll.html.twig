{% extends 'base.html.twig' %}
{% block body %}
    <div id="smashtube-content">
        <h1></h1>
        <table class="table">
            <tr>
                <th>title</th>
                <th>description</th>
                <th>duration</th>
                <th>thumbnail</th>
                <th>seasons</th>
            </tr>
            <tbody>
                {% for media in medias %}
                    <tr>
                        <td>{{ media.title }}</td>
                        <td>{{ media.description }}</td>
                        <td>{{ media.duration }}</td>
                        <td>{{ media.thumbnail }}</td>
                        <td>{{ media.season_count }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
